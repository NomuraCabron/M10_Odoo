<odoo>
    <record id="view_school_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.school_class</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name"/>
                <field name="course"/>
            </tree>
        </field>
    </record>

    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.school_class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <group>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="course"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="student_count"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>
</odoo>